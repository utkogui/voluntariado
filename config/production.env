# Environment Configuration for Production

# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/volunteer_app_prod"
DATABASE_HOST="localhost"
DATABASE_PORT="5432"
DATABASE_NAME="volunteer_app_prod"
DATABASE_USER="volunteer_user"
DATABASE_PASSWORD="secure_production_password"

# Redis Configuration
REDIS_URL="redis://localhost:6379"
REDIS_HOST="localhost"
REDIS_PORT="6379"
REDIS_PASSWORD="redis_production_password"

# JWT Configuration
JWT_SECRET="super_secure_jwt_secret_for_production_minimum_32_chars"
JWT_EXPIRES_IN="24h"
JWT_REFRESH_EXPIRES_IN="7d"

# Server Configuration
NODE_ENV="production"
PORT="3000"
HOST="0.0.0.0"

# CORS Configuration
CORS_ORIGIN="https://voluntariado.com,https://www.voluntariado.com"
CORS_CREDENTIALS="true"

# Rate Limiting
RATE_LIMIT_WINDOW_MS="900000"
RATE_LIMIT_MAX_REQUESTS="100"

# Email Configuration
EMAIL_SERVICE="sendgrid"
EMAIL_API_KEY="SG.your_sendgrid_api_key"
EMAIL_FROM="noreply@voluntariado.com"
EMAIL_FROM_NAME="Voluntariado App"

# SMS Configuration
SMS_SERVICE="twilio"
SMS_ACCOUNT_SID="your_twilio_account_sid"
SMS_AUTH_TOKEN="your_twilio_auth_token"
SMS_FROM_NUMBER="+1234567890"

# Push Notifications
FIREBASE_PROJECT_ID="voluntariado-prod"
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour Firebase Private Key\n-----END PRIVATE KEY-----"
FIREBASE_CLIENT_EMAIL="firebase-adminsdk@voluntariado-prod.iam.gserviceaccount.com"

# Payment Configuration
STRIPE_SECRET_KEY="sk_live_your_stripe_secret_key"
STRIPE_PUBLISHABLE_KEY="pk_live_your_stripe_publishable_key"
STRIPE_WEBHOOK_SECRET="whsec_your_webhook_secret"

# AWS Configuration
AWS_ACCESS_KEY_ID="your_aws_access_key_id"
AWS_SECRET_ACCESS_KEY="your_aws_secret_access_key"
AWS_REGION="us-east-1"
AWS_S3_BUCKET="voluntariado-prod-assets"

# Google Maps API
GOOGLE_MAPS_API_KEY="your_google_maps_api_key"

# Analytics
GOOGLE_ANALYTICS_ID="GA-XXXXXXXXX"
MIXPANEL_TOKEN="your_mixpanel_token"

# Monitoring
SENTRY_DSN="https://your_sentry_dsn@sentry.io/project_id"
NEW_RELIC_LICENSE_KEY="your_new_relic_license_key"

# Security
BCRYPT_ROUNDS="12"
SESSION_SECRET="super_secure_session_secret_for_production"
HELMET_CSP_ENABLED="true"

# Logging
LOG_LEVEL="info"
LOG_FORMAT="json"
LOG_FILE="logs/app.log"

# Backup Configuration
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS="30"
BACKUP_S3_BUCKET="voluntariado-prod-backups"

# CDN Configuration
CDN_URL="https://cdn.voluntariado.com"
CDN_CACHE_TTL="31536000"

# Health Check
HEALTH_CHECK_INTERVAL="30000"
HEALTH_CHECK_TIMEOUT="5000"

# Performance
COMPRESSION_ENABLED="true"
CACHE_TTL="3600"
MAX_REQUEST_SIZE="10mb"

# SSL/TLS
SSL_CERT_PATH="/etc/ssl/certs/voluntariado.crt"
SSL_KEY_PATH="/etc/ssl/private/voluntariado.key"
SSL_ENABLED="true"

# Docker Configuration
DOCKER_REGISTRY="your-registry.com"
DOCKER_IMAGE_TAG="latest"

# Kubernetes Configuration
K8S_NAMESPACE="voluntariado-prod"
K8S_REPLICAS="3"
K8S_RESOURCE_LIMITS_CPU="1000m"
K8S_RESOURCE_LIMITS_MEMORY="2Gi"
K8S_RESOURCE_REQUESTS_CPU="500m"
K8S_RESOURCE_REQUESTS_MEMORY="1Gi"

# Load Balancer
LB_HEALTH_CHECK_PATH="/health"
LB_HEALTH_CHECK_INTERVAL="30"
LB_HEALTH_CHECK_TIMEOUT="5"
LB_HEALTH_CHECK_THRESHOLD="2"

# Auto Scaling
AS_MIN_REPLICAS="2"
AS_MAX_REPLICAS="10"
AS_TARGET_CPU_UTILIZATION="70"
AS_TARGET_MEMORY_UTILIZATION="80"

# Database Connection Pool
DB_POOL_MIN="5"
DB_POOL_MAX="20"
DB_POOL_IDLE_TIMEOUT="30000"
DB_POOL_ACQUIRE_TIMEOUT="60000"

# Redis Connection Pool
REDIS_POOL_MIN="5"
REDIS_POOL_MAX="20"
REDIS_POOL_IDLE_TIMEOUT="30000"

# File Upload
MAX_FILE_SIZE="10mb"
ALLOWED_FILE_TYPES="image/jpeg,image/png,image/gif,application/pdf"
UPLOAD_PATH="/uploads"

# API Versioning
API_VERSION="v1"
API_PREFIX="/api"

# Feature Flags
FEATURE_CHAT_ENABLED="true"
FEATURE_PAYMENTS_ENABLED="true"
FEATURE_NOTIFICATIONS_ENABLED="true"
FEATURE_ANALYTICS_ENABLED="true"

# Maintenance Mode
MAINTENANCE_MODE="false"
MAINTENANCE_MESSAGE="Sistema em manutenção. Volte em breve."

# Error Handling
ERROR_STACK_TRACE="false"
ERROR_DETAILS="false"

# Timezone
TZ="America/Sao_Paulo"

# Locale
LOCALE="pt-BR"
CURRENCY="BRL"

# Business Hours
BUSINESS_START_HOUR="8"
BUSINESS_END_HOUR="18"
BUSINESS_TIMEZONE="America/Sao_Paulo"
