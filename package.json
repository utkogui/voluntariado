{
  "name": "volunteer-app-backend",
  "version": "1.0.0",
  "description": "Backend para aplicação de voluntariado",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPattern=tests/unit",
    "test:integration": "jest --testPathPattern=tests/integration",
    "test:e2e": "jest --testPathPattern=tests/e2e",
    "test:performance": "node tests/performance/performance-test.js",
    "test:load": "node tests/performance/load-test.js",
    "test:benchmark": "node tests/performance/benchmark.js",
    "test:memory": "node tests/performance/memory-test.js",
    "test:security": "node tests/security/security-test.js",
    "test:security:vulnerability": "node tests/security/vulnerability-scan.js",
    "test:security:penetration": "node tests/security/penetration-test.js",
    "test:accessibility": "node tests/accessibility/accessibility-test.js",
    "test:accessibility:wcag": "node tests/accessibility/wcag-compliance.js",
    "test:visual": "node tests/visual/visual-regression-test.js && node tests/visual/screenshot-test.js && node tests/visual/component-test.js",
    "test:visual:regression": "node tests/visual/visual-regression-test.js",
    "test:visual:screenshot": "node tests/visual/screenshot-test.js",
    "test:visual:component": "node tests/visual/component-test.js",
    "test:visual:update-baselines": "node tests/visual/visual-regression-test.js --update-baselines",
    "test:coverage:report": "node scripts/coverage-report.js",
    "quality:check": "node scripts/quality-check.js",
    "quality:report": "npm run quality:check && npm run test:coverage:report",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:report": "eslint . --format json --output-file quality-reports/eslint-report.json",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "security:audit": "npm audit --audit-level moderate",
    "security:audit:fix": "npm audit fix",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:seed": "node prisma/seed.js"
  },
  "dependencies": {
    "@prisma/client": "^5.7.1",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "joi": "^17.11.0",
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.33.1",
    "nodemailer": "^6.9.7",
    "twilio": "^4.19.0",
    "stripe": "^14.9.0",
    "aws-sdk": "^2.1509.0",
    "firebase-admin": "^11.11.1",
    "node-cron": "^3.0.3",
    "uuid": "^9.0.1",
    "dotenv": "^16.3.1",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "express-session": "^1.17.3",
    "connect-redis": "^7.1.0",
    "redis": "^4.6.12",
    "socket.io": "^4.7.4",
    "ws": "^8.14.2",
    "pg": "^8.11.3",
    "prisma": "^5.7.1"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "jest-environment-node": "^29.7.0",
    "@types/jest": "^29.5.8",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.0.1",
    "prettier": "^3.1.0",
    "nodemon": "^3.0.2",
    "cross-env": "^7.0.3",
    "faker": "^6.6.6",
    "factory-girl": "^5.0.4",
    "testcontainers": "^10.7.0",
    "puppeteer": "^21.6.1",
    "playwright": "^1.40.1",
    "artillery": "^2.0.0",
    "k6": "^0.0.0",
    "pa11y": "^7.0.0",
    "axe-core": "^4.8.2",
    "lighthouse": "^11.4.0",
    "sonarjs": "^1.9.1",
    "security": "^1.0.0",
    "autocannon": "^7.12.0",
    "clinic": "^12.0.0",
    "0x": "^5.4.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "controllers/**/*.js",
      "services/**/*.js",
      "middleware/**/*.js",
      "routes/**/*.js",
      "!**/node_modules/**",
      "!**/coverage/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": ["text", "lcov", "html"],
    "testMatch": [
      "**/tests/**/*.test.js",
      "**/tests/**/*.spec.js"
    ],
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
    "testTimeout": 30000,
    "verbose": true
  },
  "keywords": [
    "volunteer",
    "voluntariado",
    "nodejs",
    "express",
    "prisma",
    "postgresql"
  ],
  "author": "Volunteer App Team",
  "license": "MIT"
}